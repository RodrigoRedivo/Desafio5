{% extends 'layout.njk' %}

{% block content %}

<div class="card">
  <section 
    class="avatar" 
    style="background: url({{ student.avatar_url }}) no-repeat center center / cover"></section> 
  <section class="details">
    
    <h3>Details</h3>
    <div class="item">
      <div>Avatar URL</div>
      <div>{{ student.avatar_url}}</div>
    </div>

    <div class="item">
      <div>Full name</div>
      <div>{{ student.name }}</div>
    </div>

    <div class="item">
      <div>Email</div>
      <div>{{ student.email }}</div>
    </div>

    <div class="item">
      <div>Date of birth</div>
      <div>{{ student.birth_date }}</div>
    </div>

    <div class="item">
      <div>School year</div>
      <div>{{ student.schoolyear }}</div>
    </div>
    
    
    <div class="item">
      <div>Weekly workload (AM/PM)</div>
      <div>{{ student.workload }}</div>
    </div>

    <div>
      <div class="item">
        <div> Student of </div>
        <div>{{ student.teacher_name }}</div>
      </div>
    </div>
    
    <a href="/students/{{student.id}}/edit" class="button">Edit</a>
  </section>
</div>

{% endblock content %}