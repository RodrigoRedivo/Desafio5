{% extends 'layout.njk' %}

{% block content %}

<div class="card">
  <section 
    class="avatar" 
    style="background: url({{ teacher.avatar_url }}) no-repeat center center / cover"></section> 
  <section class="details">
    
    <h3>Details</h3>
    <div class="item">
      <div>Avatar URL</div>
      <div>{{ teacher.avatar_url}}</div>
    </div>

    <div class="item">
      <div>Name</div>
      <div>{{ teacher.name }}</div>
    </div>

    <div class="item">
      <div>Date of birth</div>
      <div>{{ teacher.birth_date }}</div>
    </div>

    <div class="item">
      <div>Educational level</div>
        <select name="degree">
          <option>{{teacher.education_level}}</option> 
        </select>
    </div>
    
    
    <div class="item">
        <div>Class Type</div>
        <span>{{ "Presential" if teacher.class_type == "Presential" else "Remote" }}</span>
    </div>

    <div class="item">
      <div>subjects Taught</div>
      <div>
        {% for acting in teacher.subjects_taught %}
          <span>{{acting}}</span>
        {% endfor %}
      </div>
    </div>

    <div>
      <div class="item">
        <div>Since</div>
        <div>{{ teacher.created_at}}</div>
      </div>
    </div>

    <a href="/teachers/{{teacher.id}}/edit" class="button">Edit</a>
  </section>
</div>

{% endblock content %}